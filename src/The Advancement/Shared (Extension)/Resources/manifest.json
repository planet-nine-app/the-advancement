{
  "manifest_version": 3,
  "name": "The Advancement",
  "version": "1.0.0",
  "description": "Privacy-first browser extension with sessionless authentication, spell casting, nineum rewards, and Planet Nine ecosystem integration.",
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "webNavigation",
    "clipboardWrite",
    "nativeMessaging",
    "<all_urls>"
  ],
  
  "host_permissions": [
    "http://localhost/*",
    "http://127.0.0.1/*", 
    "https://dev.*.allyabase.com/*",
    "https://*.planetnineapp.com/*",
    "*://localhost:*/*"
  ],
  
  "background": {
    "scripts": ["background.js"]
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content.js",
        "ecs.js",
        "adversement.js",
        "entertainment-system.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "The Advancement - Planet Nine Extension",
    "default_icon": {
      "48": "images/icon-48.png",
      "96": "images/icon-96.png",
      "128": "images/icon-128.png",
      "256": "images/icon-256.png",
      "512": "images/icon-512.png"
    }
  },
  
  "icons": {
    "48": "images/icon-48.png",
    "96": "images/icon-96.png", 
    "128": "images/icon-128.png",
    "256": "images/icon-256.png",
    "512": "images/icon-512.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "InputDetector.js",
        "TypingSimulator.js",
        "ficus.jpg",
        "slime.png",
        "fonts.css",
        "fonts/FFVI-Damage-v3-LC-BW.otf",
        "fonts/FFVI-Damage-v3-LC-BA.otf",
        "fonts/FFVI-Damage-v3-LC-BO.otf",
        "fonts/FFVI-Damage-v3-LC-KO.otf",
        "FFVI-Damage-v3-LC-BW.otf",
        "FFVI-Damage-v3-LC-BA.otf",
        "FFVI-Damage-v3-LC-BO.otf",
        "FFVI-Damage-v3-LC-KO.otf"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "externally_connectable": {
    "matches": [
      "http://localhost:*/*",
      "https://dev.*.allyabase.com/*",
      "https://*.planetnineapp.com/*"
    ]
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  
  "author": "Planet Nine",
  "homepage_url": "https://github.com/planet-nine-app/planet-nine"
}
