FROM node:22.14.0

WORKDIR /usr/src/app/linkhub

# Copy package files
COPY package.json ./

# Install dependencies
RUN npm install

# Copy application files
COPY server.js ./
COPY README.md ./

# Expose LinkHub port
EXPOSE 3010

# Set environment variables
ENV PORT=3010
ENV FOUNT_BASE_URL=http://localhost:3004/

# Start LinkHub
CMD ["node", "server.js"]
